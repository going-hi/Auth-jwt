{
  "include": ["./src"],
  "compilerOptions": {
    "target": "ES2022",                                  
    "experimentalDecorators": true, 
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["src/@types", "./node_modules/@types"], 
    "sourceMap": true,                              
    "outDir": "./dist",                                 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  }
}
